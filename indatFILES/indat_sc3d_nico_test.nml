opt_opac = 0
opt_opal = 0
opt_angint_method = 9
opt_method = 1
opt_sol2d = f
opt_ltec = 1
opt_incl_cont = t
opt_start_cont = t
opt_ng_cont = t
opt_ait_cont = f
opt_incl_line = f
